configuration {
    font:                           "Noto Sans 10";
    show-icons:                     true;
	icon-theme: 					"Tela-circle-red";
    display-drun: 					"ï‰·";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                true;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

